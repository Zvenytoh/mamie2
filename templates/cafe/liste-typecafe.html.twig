{% extends 'base.html.twig' %}
{% block title %}Liste
{% endblock %}
{% block body %}
	<div class="container-fluid">
		<h1 class="text-center text-primary">
			Liste café
		</h1>
		<div class="row justify-content-center">
			<div class="col-12 col-md-8 bg-white p-4 m-0 text-primary">
				<div class="table-responsive">
					<table class="table table-hover">
						<thead>
							<tr class="fw-bold text-primary">
								<th scope="col">Désignation</th>
								<th scope="col">Origine</th>
								
							</tr>
						</thead>
						<tbody>
							{% for TypeCafe in typeCafe %}
								<tr class="{{ cycle(['table-primary', 'table-secondary'], loop.index0) }}">
									<td>{{ TypeCafe.désignation | capitalize }}</td>
									<td>{{ TypeCafe.origine | capitalize }}</td>
								
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
